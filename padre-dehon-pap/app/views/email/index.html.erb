<% @templates.each do |template| %>
    <%= template['name'] %>
    <%= template['versions'].first['subject'] %>
    <button data-temp-id="<%= template['id'] %>" class="get-template" > preview</button>
    <br>
<% end %>

</div>
<!-- The Modal -->
<div id="myModal" class="modal">
  <!-- Modal content -->
  <div class="modal-content">
    <div class="modal-header">
      <span class="close">&times</span>
      <h2>Preview do Email</h2>
    </div>
    <div class="modal-body email-template">
    </div>
    <div class="modal-footer"></div>
  </div>

</div>

<div><%= @campaign[:plain_email_text]%></div>

<%= form_tag('/email/create_campaign', method: "post", id: "create_campaign", remote: "true") do %>
    <%= text_field_tag '@campaign[:plain_email_text]'%><br>
    <%= text_field_tag '@campaign[:email_content]'%><br>
    <%= text_field_tag '@campaign[:sender_id]'%><br>
    <%= text_field_tag '@campaign[:subject]'%><br>
    <%= text_field_tag '@campaign[:title]'%><br>
    <%= text_field_tag '@campaign[:segment_ids]'%><br>
    <%= text_field_tag '@campaign[:categories]'%><br>
    <%= text_field_tag '@campaign[:lists]'%><br>

    
    <%= submit_tag("Sign me up!") %>
<% end %>


