<div class="container">
  <div class="row">
    <div class="col-md-6">
      <%= fu.simple_fields_for(:address, html: { class: 'form-vertical' }) do |a| %>
        <%= a.input :zipcode, label: "CEP:", input_html: { id: 'zipcode' } %>
        <%= a.input :street, label: "Rua:", input_html: { id: 'street' } %>
        <%= a.input :complement, label: "Complemento:" %>
        <%= a.input :neighborhood, label: "Bairro:", input_html: { id: 'neighborhood' } %>
        <%= a.input :city, label: "Cidade:", input_html: { id: 'city' } %>
        <%= a.input :state, label: "Estado:", input_html: { id: 'state' } %>
      <% end %>
    </div>
  </div>
</div>

